http:
  routers:
    {{ backrest_name }}:
      rule: "Host(`{{ backrest_traefik_host }}`)"
      entrypoints: "{{ common_traefik_entrypoint }}"
      service: {{ backrest_name }}

  services:
    {{ backrest_name }}:
      loadBalancer:
        servers:
          - url: "http://host.containers.internal:{{ (backrest_container_env_defaults | combine(backrest_container_env, recursive=True)).BACKREST_PORT | ansible.builtin.split(':') | last }}"
